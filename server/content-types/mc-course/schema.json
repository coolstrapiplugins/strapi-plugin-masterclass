{
  "kind": "collectionType",
  "collectionName": "mc_course",
  "info": {
    "singularName": "mc-course",
    "pluralName": "mc-courses",
    "displayName": "Course",
    "description": ""
  },
  "options": {
    "draftAndPublish": false,
    "comment": ""
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "lectures": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::masterclass.mc-lecture",
      "mappedBy": "course"
    },
    "duration": {
      "type": "integer"
    },
    "description": {
      "type": "text"
    },
    "price": {
      "type": "decimal"
    },
    "thumbnail": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "students": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::masterclass.mc-student-course",
      "mappedBy": "course"
    },
    "long_description": {
      "type": "richtext"
    }
  }
}
